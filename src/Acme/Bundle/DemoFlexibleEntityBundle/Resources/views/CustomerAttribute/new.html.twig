{% extends 'AcmeDemoFlexibleEntityBundle::layout.html.twig' %}

{% block pagecontent %}

    <h2>{{ "Create attribute" | trans }}</h2>

    <form action="{{ path('acme_demoflexibleentity_customerattribute_create') }}" method="post" {{ form_enctype(form) }}>
        
        {% if form.get('errors') is not empty %}
            <div class="alert alert-error">{{ form_errors(form) }}</div>
        {% endif %}
        
        <div class="form-panel ui-corner-all">
            {{ form_widget(form) }}
        </div>
        
        <input id="form-submit" type="submit" value="{{ "Save" | trans }}" class="ui-helper-hidden" role="button" aria-disabled="false" />
        
    </form>
        
    <hr />

{% endblock %}
