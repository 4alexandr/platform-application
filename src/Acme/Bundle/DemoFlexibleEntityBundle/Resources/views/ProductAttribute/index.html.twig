{% extends 'AcmeDemoFlexibleEntityBundle::layout.html.twig' %}

{% block content %}

    <h1>Attributes overview
        <a class="btn btn-primary pull-right" style="margin-left:10px;" href="{{ path('acme_demoflexibleentity_productattribute_create') }}">New attribute</a>
        <a class="btn btn-primary pull-right" href="{{ path('acme_demoflexibleentity_product_index') }}">Manage products</a>
    </h1>

    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Type</th>
                <th>Required</th>
                <th>Unique</th>
                <th>Translatable</th>
                <th>Scopable</th>
                <th>Created</th>
                <th>Updated</th>
                <th style="width: 50px">Edit</th>
                <th style="width: 50px">Remove</th>
            </tr>
        </thead>
        <tbody>
        {% for attribute in attributes %}
            <tr>
                <td>{{ attribute.id }}</td>
                <td>{{ attribute.code }}</td>
                <td>{{ attribute.attributeType }}</td>
                <td>{{ attribute.required }}</td>
                <td>{{ attribute.unique }}</td>
                <td>{{ attribute.translatable }}</td>
                <td>{{ attribute.scopable }}</td>
                <td>{{ attribute.created|date('Y-m-d h:i:s') }}</td>
                <td>{{ attribute.updated|date('Y-m-d h:i:s') }}</td>
                <td><a href="{{ path('acme_demoflexibleentity_productattribute_edit', { id: attribute.id }) }}"><i class="icon-edit"></i></a></td>
                <td><a href="{{ path('acme_demoflexibleentity_productattribute_remove', { id: attribute.id }) }}"><i class="icon-remove"></i></a></td>
            </tr>
         {% endfor %}
        </tbody>
    </table>
    <hr />


{% endblock %}
