{% extends 'AcmeDemoFlexibleEntityBundle::layout.html.twig' %}

{% block content %}

    <h1>Customers overview
        <a class="btn btn-primary pull-right" style="margin-left:10px;" href="{{ path('acme_demoflexibleentity_customer_create') }}">New customer</a> 
        <a class="btn btn-primary pull-right" href="{{ path('acme_demoflexibleentity_customerattribute_index') }}">Manage attributes</a>
    </h1>

    <ul id="menu-block">
        <li><a href="{{ path('acme_demoflexibleentity_customer_index') }}">Select entities and all attribute values (USE FLEXIBLE QUERY BUILDER)</a></li>
        <li><a href="{{ path('acme_demoflexibleentity_customer_querylazyload') }}">Select just entities, attributes, values and options are lazy loaded (USE QUERY BUILDER)</a></li>

        <li><a href="{{ path('acme_demoflexibleentity_customer_query', {'attributes': 'dob&gender'}) }}">Select only date of birth and gender</a></li>
        <li><a href="{{ path('acme_demoflexibleentity_customer_query', {'attributes': 'null', 'criteria': 'firstname=Nicolas' }) }}">Select filtered by firstname (firstname = "Nicolas")</a></li>
        <li><a href="{{ path('acme_demoflexibleentity_customer_query', {'attributes': 'null', 'criteria': 'firstname=Nicolas&company=akeneo' }) }}">Select filtered by firstname and company (firstname = "Nicolas" and company = "akeneo")</a></li>
        <li><a href="{{ path('acme_demoflexibleentity_customer_query', {'attributes': 'null', 'criteria': 'firstname=Nicolas', 'orderBy': 'null', 'limit': 10, 'offset': 0}) }}">Select filter by firstname (Nicolas) and limit (10)</a></li>
        <li><a href="{{ path('acme_demoflexibleentity_customer_query', {'attributes': 'null', 'criteria': 'firstname=Nicolas', 'orderBy': 'dob=desc'}) }}">Select only birthdate, filter by firstname (Nicolas) and order by birthdate desc</a></li>
    </ul>

    <hr/>

    <p>Nb total results : {{ customers|length }}</p>

    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Birth</th>
                <th>Gender</th>
                <th>Company</th>
                <th>Hobbies</th>
                <th>Website</th>
                <th style="width: 50px">Show</th>
                <th style="width: 50px">Edit</th>
                <th style="width: 50px">Remove</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
        <tr>
            <td>{{ customer.id }}</td>
            <td>{{ customer.email }}</td>
            <td>{{ customer.firstname }}</td>
            <td>{{ customer.lastname }}</td>
            <td>{{ customer.dob|date('Y-m-d')}}</td>
            <td>{{ customer.gender }}</td>
            <td>{{ customer.company }}</td>
            <td>{{ customer.hobby }}</td>
            <td>{{ customer.website }}</td>

            <td><a href="{{ path('acme_demoflexibleentity_customer_show', { id: customer.id }) }}"><i class="icon-zoom-in"></i></a></td>
            <td><a href="{{ path('acme_demoflexibleentity_customer_edit', { id: customer.id }) }}"><i class="icon-edit"></i></a></td>
            <td><a href="{{ path('acme_demoflexibleentity_customer_remove', { id: customer.id }) }}"><i class="icon-remove"></i></a></td>
        </tr>
        {% endfor %}

        </tbody>
    </table>
    <hr />

{% endblock %}
