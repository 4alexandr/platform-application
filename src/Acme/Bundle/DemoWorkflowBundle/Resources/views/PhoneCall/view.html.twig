{% extends 'AcmeDemoWorkflowBundle::layout.html.twig' %}

{% set title = "Phone Call" %}

{% block content %}
    <h1>{{ title | trans }}
        <a class="btn btn-primary pull-right" href="{{ path('acme_demoworkflow_phonecall_list') }}">{{ "Back" | trans }}</a>
    </h1>

    <div class="form-horizontal">
        <h5 class="usser-fiedset"><span>Start Workflow</span></h5>
        {% for workflow in applicableWorkflows %}
            <table class="table table-bordered table-striped" style="width: auto;">
                <tr>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
                <tr>
                    <td>{{ workflow.label }}</td>
                    <td>
                        <a class="btn" href="{{ path('acme_demoworkflow_workflowitem_create', {entityId: phoneCall.id, workflowName: workflow.name}) }}">
                            {{ workflow.startStep.label }}
                        </a>
                    </td>
                </tr>
            </table>
        {% endfor  %}
    </div>

    <div class="form-horizontal">
        <h5 class="usser-fiedset"><span>Basic Information</span></h5>
        <div class="control-group">
            <label class="control-label">Number</label>
            <div class="controls">
                <p class="control-label">{{ phoneCall.number }}</p>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Name</label>
            <div class="controls">
                <p class="control-label">{{ phoneCall.name }}</p>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Description</label>
            <div class="controls">
                <p class="control-label">{{ phoneCall.description }}</p>
            </div>
        </div>
    </div>


{% endblock %}
