{% extends 'AcmeDemoWorkflowBundle::layout.html.twig' %}

{% set title = phoneCall.id ? "Edit Phone Call" : "Create Phone Call" %}

{% block content %}
    <h1>{{ title | trans }}
        <a class="btn btn-primary pull-right" style="margin-left:10px;" href="{{ path('acme_demoworkflow_phone_call_list') }}">{{ "Back" | trans }}</a>
    </h1>

    <form action="{{ phoneCall.id ? path('acme_demoworkflow_phone_call_edit', { id: phoneCall.id }) : path('acme_demoworkflow_phone_call_create', {'id': phoneCall.id}) }}" method="POST">

        <fieldset>
            {{ form_widget(form) }}

            <div class="form-row">
                <button class="btn btn-large btn-primary pull-right" type="submit">{{ "Save" | trans }}</button>
            </div>
        </fieldset>
    </form>

{% endblock %}
