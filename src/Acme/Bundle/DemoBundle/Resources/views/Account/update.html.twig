{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroUIBundle:Form:fields.html.twig' %}

{% set title = form.vars.value.id ? 'Update Account'|trans : 'Create Account'|trans %}

{% if audit_enabled|default(false) %}
    {% set entityClass = 'Acme_Bundle_DemoBundle_Entity_Account' %}
    {% set audit_title = 'AccountDemo' %}
{% endif %}

{% set gridId = 'accounts-grid' %}
{% set formAction = form.vars.value.id ? path('account_update', { 'id': form.vars.value.id}) : path('account_create') %}

{% block head_script %}
    {{ parent() }}

{% endblock %}

{% block navButtons %}
    {{ UI.button({'path' : path('account'), 'title' : 'Cancel', 'label' : 'Cancel'}) }}
    {{ UI.buttonType({'type': 'submit', 'class': 'btn-success', 'label': 'Save'}) }}
{% endblock navButtons %}

{% block pageHeader %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'account_id' %}
    {% set dataBlocks = [{
        'title': 'General',
        'class': 'active',
        'subblocks': [
            {
                'title': '',
                'data': [
                    form_row(form.name),
                    form_row(form.description),
                ]
            }
        ]
    }] %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
        'hiddenData': form_rest(form)
    }%}

    {{ parent() }}
{% endblock content_data %}
