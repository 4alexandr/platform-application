{% extends 'AcmeDemoBundle::layout.bootstrap.html.twig' %}
{% import 'AcmeDemoBundle::macros.html.twig' as macros %}

{% block title %}Users overview - {{ parent() }}{% endblock %}

{% block content %}
<h1>Users overview <a class="btn btn-primary pull-right" href="{{ path('acme_demo_user_create') }}">Add new</a></h1>

{{ knp_pagination_render(pager, 'AcmeDemoBundle::pager.bootstrap.html.twig') }}

<table class="table table-bordered table-striped table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th style="width: 50px">Enabled</th>
            <th style="width: 150px">Created At</th>
            <th style="width: 50px">Edit</th>
            <th style="width: 50px">Remove</th>
        </tr>
    </thead>

    <tbody>
        {% for rec in pager %}
        <tr>
            <td><a href="{{ path('acme_demo_user_show', { id: rec.id }) }}">{{ rec.id }}</a></td>
            <td><a href="{{ path('acme_demo_user_show', { id: rec.id }) }}">{{ rec.username }}</a></td>
            <td><a href="{{ path('acme_demo_user_show', { id: rec.id }) }}">{{ rec.email }}</a></td>
            <td>{% if rec.enabled %}<i class="icon-check"></i>{% endif %}</td>
            <td>{{ macros.time(rec.createdAt) }}</td>
            <td><a href="{{ path('acme_demo_user_edit', { id: rec.id }) }}"><i class="icon-edit"></i></a></td>
            <td><a href="{{ path('acme_demo_user_remove', { id: rec.id }) }}"><i class="icon-remove"></i></a></td>
        </tr>
        {% else %}
        <tr>
            <td colspan="100%">There are no users.</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{{ knp_pagination_render(pager, 'AcmeDemoBundle::pager.bootstrap.html.twig') }}

{% endblock %}