{% extends bap.layout is defined ? bap.layout : 'AcmeDemoFlexibleEntityBundle::layout.html.twig' %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroAddressBundle:Include:javascript.html.twig' %}
{% endblock %}

{% block content %}
    {% set submitUrl = form.vars.value.id
            ? path('acme_demo_address_edit', { id: form.vars.value.id, back: app.request.get('back') })
            : path('acme_demo_address_create', { back: app.request.get('back') })
    %}
    {% include 'OroAddressBundle:Address:baseForm.html.twig' with {'submitUrl': submitUrl, 'form': form} %}
{% endblock content %}
