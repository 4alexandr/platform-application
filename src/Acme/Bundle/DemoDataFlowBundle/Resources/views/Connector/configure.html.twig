{% extends bap.layout is defined ? bap.layout : 'AcmeDemoFlexibleEntityBundle::layout.html.twig' %}

{% set title = 'Configure connector' %}

{% block title %}{{ parent() }} - {{ title }}{% endblock %}

{% block content %}

    <STYLE type="text/css">
        .dataflow-steps li {width:225px;}
    </STYLE>
    
    <div class="navbar">
        <div class="navbar-inner">
            <ul class="nav dataflow-steps">
                <li><a href="{{ path('acme_demodataflow_connector_select') }}">(1) Select connector</a></li>
                <li class="active"><a href="{{ path('acme_demodataflow_connector_select') }}">(2) Configure connector</a></li>
                <li><a href="{{ path('acme_demodataflow_connector_select') }}">(3) Select job</a></li>
                <li><a href="{{ path('acme_demodataflow_connector_select') }}">(4) Configure job</a></li>
                <li><a href="{{ path('acme_demodataflow_connector_select') }}">(5) Schedule / run</a></li>
            </ul>
        </div>
    </div>

<form action="{{ path('acme_demodataflow_connector_edit') }}" method="POST" class="form-register">

    <fieldset>
        <legend>{{ "Load configuration" | trans }}</legend>

        <ul>
        {% for configuration in configurations %}
            <li><a href="{{ path('acme_demodataflow_connector_configure', { connectorId: connectorId, configurationId: configuration.id }) }}">Load configuration "{{ configuration.description }}"</a></li>
        {% endfor %}
            <li><a href="{{ path('acme_demodataflow_connector_configure', { connectorId: connectorId, configurationId: 0 }) }}">Reset to create a new configuration</a></li>
        </ul>

    </fieldset>

    <fieldset>
        <legend>{{ "Edit configuration" | trans }}</legend>

        {{ form_widget(form) }}

        <div class="form-row">
            <button class="btn btn-large btn-primary pull-right" type="submit">{{ "Save" | trans }}</button>
        </div>
    </fieldset>
</form>

{% endblock %}
