{% extends bap.layout is defined ? bap.layout : 'AcmeDemoFlexibleEntityBundle::layout.html.twig' %}

{% set title = connector.id ? "Configure connector" : "Configure new connector" %}

{% block title %}{{ parent() }} - {{ title | trans }}{% endblock %}

{% block content %}

    {% include 'AcmeDemoDataFlowBundle:Configure:steps.html.twig' with {'steps': steps} %}
    
    <form action="{{ connector.id ? path('acme_demodataflow_configure_edit', { id: connector.id }) : path('acme_demodataflow_configure_create', {'serviceId': connector.serviceId}) }}" method="POST" class="form-register">

        <fieldset>
            <legend>{{ title | trans }}</legend>
    
            {{ form_widget(form) }}
    
            <div class="form-row">
                <button class="btn btn-large btn-primary pull-right" type="submit">{{ "Next" | trans }}</button>
            </div>
        </fieldset>
    </form>

{% endblock %}
